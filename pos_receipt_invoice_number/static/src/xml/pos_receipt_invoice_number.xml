<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="OrderReceipt">
        <t t-jquery="t[t-if='receipt.cashier']" t-operation="after">
            <t t-if="order.invoice_number and widget.pos.config.receipt_invoice_number">
                <div style="text-align:center">-------------------------------------------</div>
                    Documento Tributario Electronico
                    <br/>
                    No. Autorización: <t t-esc="order.uuid"/><br />
                    Correlativo Interno: <t t-esc="order.invoice_number"/><br />
                    Serie: <t t-esc="order.fel_serie"/><br />
                    Número: <t t-esc="order.fel_number"/><br />
                    Fecha: <t t-esc="order.fel_date"/><br />
                <div style="text-align:center">-------------------------------------------</div>
            </t>
            <t t-set="client" t-value="order.get_client()"/>
            <t t-if="client and widget.pos.config.receipt_customer_vat">
                <t t-set="client" t-value="order.get_client()"/>
                Cliente: <t t-esc="client['name']"/><br />
                <t t-if="client['street']">
                    Direccion: <t t-esc="client['street']"/><br />
                </t>
                <t t-if="client['vat']">
                    Nit: <t t-esc="client['vat']"/><br />
                </t>
                <div style="text-align:center">-------------------------------------------</div>
                <!--<t t-if="client['email']">
                    Email: <t t-esc="client['email']"/><br />
                </t>
                <t t-if="client['phone'] or client['mobile']">
                    Phone: <t t-esc="client['phone'] || client['mobile']"/><br />
                </t>-->
                <br/>
            </t>
        </t>
        <t t-jquery="div[class*='receipt-phone']" t-operation="replace">
            <div class="pos-center-align">
                <t t-esc="widget.pos.company.street"/><br />
            </div>
        </t>
        <t t-jquery="div[class*='receipt-user']" t-operation="replace">
            <div class="pos-center-align">
                NIT:<t t-esc="widget.pos.company.vat || ''"/><br />
            </div>
        </t>
        <t t-jquery="t[t-esc*='widget.pos.company.name']" t-operation="replace">
            <div class="pos-center-align">
                ------------INFORMACIÓN EFACE------------
                <br />
                <t t-esc="widget.pos.company.nombre_comercial"/><br />
                <br />
                <t t-esc="widget.pos.company.name"/><br />
            </div>
        </t>
        <t t-jquery="table[class*='receipt-change']" t-operation="after">
            <div style="text-align:center">-----------------------------------------</div>
            <div class="pos-center-align">
                <strong>
                    SUJETO A PAGOS TRIMESTRALES
                </strong>                
            </div>
         </t>
    </t>


    <t t-extend="ClientDetails">
        <t t-jquery="div[class*='client-details-left']" t-operation="append">
            <div class='client-detail'>
                <span class='label'>TIN</span>
                <t t-if="partner.vat">
                    <span class='detail'><t t-esc='partner.vat'/></span>
                </t>
            </div>
        </t>
    </t>

</templates>
